### Login Genérico (Use conforme necessidade)
# @name login_generico
POST {{baseUrl}}/api/auth/login
Content-Type: {{contentType}}

{
  "email": "seu-email@aqui.com",
  "password": "sua-senha"
}

> {%
  if (response.status === 200) {
    client.log(" Login realizado com sucesso!");
    client.log(" Token: " + response.body.token);
    client.log(" Usuário: " + response.body.email);
    client.log(" Role: " + response.body.role);
    client.log(" ID: " + response.body.userId);
  }
%}